{
  "useTabs": true,
  "tabWidth": 4,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "printWidth": 100,
  "plugins": ["@prettier/plugin-php", "prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": ["*.json", "*.yml", "*.yaml"],
      "options": {
        "useTabs": false,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.php"],
      "options": {
        "parser": "php",
        "phpVersion": "8.0",
        "trailingCommaPHP": true,
        "braceStyle": "psr-2",
        "singleQuote": false,
        "useTabs": true,
        "tabWidth": 4,
        "htmlWhitespaceSensitivity": "ignore",
        "printWidth": 100
      }
    }
  ]
}

{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "version": "0.1.0",
  "name": "trydo-wp-theme-bolierplate/bolierplate-block",
  "title": "Bloco Boilerplate",
  "category": "trydo-blocks",
  "icon": "index-card",
  "description": "Card destacado com título, descrição e link usando o design base do tema.",
  "keywords": ["card", "cta", "tailwind"],
  "supports": {
    "html": false,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "align": {
      "type": "string",
      "default": "full"
    },
    "title": {
      "type": "string",
      "default": "Título do bloco"
    },
    "description": {
      "type": "string",
      "default": "Use este bloco para destacar uma mensagem importante com o mesmo visual do tema."
    },
    "linkLabel": {
      "type": "string",
      "default": "Saiba mais"
    },
    "linkUrl": {
      "type": "string",
      "default": "#"
    }
  },
  "render": "file:./render.php",
  "script": "file:./interactive.js",
  "viewScript": "file:./view.js"
}

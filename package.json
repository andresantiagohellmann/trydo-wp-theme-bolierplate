{
  "name": "trydo-wp-theme-bolierplate",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "production": "node scripts/build-production.js",
    "scaffold": "plop --config scaffold/plopfile.cjs",
    "lint": "pnpm run lint:js && pnpm run lint:css && pnpm run lint:php",
    "lint:js": "eslint .",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:php": "vendor/bin/php-cs-fixer fix --dry-run --diff",
    "format": "pnpm run format:prettier && pnpm run format:php-html && pnpm run format:php",
    "format:prettier": "prettier --write \"**/*.{js,jsx,json,css,md,html}\"",
    "format:php": "vendor/bin/php-cs-fixer fix",
    "format:php-html": "node scripts/format-php-html.js",
    "format:check": "prettier --check \"**/*.{js,jsx,json,css,md,html}\" && vendor/bin/php-cs-fixer fix --dry-run",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@prettier/plugin-php": "^0.24.0",
    "@tailwindcss/vite": "^4.1.14",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.3",
    "glob": "^11.0.3",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "plop": "^4.0.4",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^36.0.1",
    "tailwindcss": "^4.1.14",
    "vite": "^7.1.7"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.php": [
      "vendor/bin/php-cs-fixer fix"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d",
  "dependencies": {
    "@phosphor-icons/web": "^2.1.2",
    "gsap": "^3.13.0"
  }
}
